<p id="notice"><%= notice %></p>

<% voteChecker = 0 %>
<% heighest = "" %>
<% @articles.each do |article| %>
 <% if article.votes.length > voteChecker %>
    <% voteChecker = article.votes.count %>
    <% heighest = article %>
 <% end %>
<% end %>

<% if heighest.image.attached? %>
    <div class="header-img-wrapper" style="background-image: url(<%= rails_blob_url( heighest.image ) %>)">
  <% end %>
<div class="content-wrapper">
 <span class="img-cat"><%= heighest.category.name %> </span> 
 <span class="title"><%= heighest.title%></span> 

 <div class="grid-h">
 <% @categories.each do |category| %>
   <div class='category'>
  <div style="background-image: url(<%= rails_blob_url (category.articles.last.image) %>)"> </div>
     <p> <%= link_to category.name, category_path(category) %></p>
     <span> <%= category_article_link(category) %></span>
   </div>
 <% end %>
</div>



<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.votes.count %></td>

        <td>
          <% if article.image.attached? %>
          <%= image_tag article.image, height: '70', width: '70' %>
          <% end %>
        </td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>

</div>



