<div class="card my-1"> 
  <div class="card-body">
    <%= form_with(model: [@article, @article.comments.build], local: true) do |f| %>
      <div class="form-group">
        <%= f.label 'New comment' %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <%= f.submit 'Comment', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>